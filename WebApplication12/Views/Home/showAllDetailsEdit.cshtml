@model IEnumerable<WebApplication12.EF.Product>

@{
    ViewBag.Title = "showAllDetails";
    Layout = "~/Views/Shared/_NewVIewItem.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <title>Product List</title>
    <style>
        body {
            background-color: #f5f5f5; /* Set a light background color */
            font-family: Arial, sans-serif;
        }

        .container {
            background-color: #fff; /* Set a white background for the container */
            border: 1px solid #ccc; /* Add a border around the container */
            border-radius: 10px; /* Round the corners of the container */
            padding: 20px;
            margin: 20px auto;
            max-width: 800px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Add a subtle box shadow */
        }

        table {
            width: 100%;
            border-collapse: collapse;
            border: 1px solid #ddd; /* Add a border to the table */
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2; /* Set a light gray background for table headers */
        }

        tr:nth-child(even) {
            background-color: #f2f2f2; /* Set a light gray background for even rows */
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Product List</h2>
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().product_id) <!-- Display the header for product_id -->
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().product_name) <!-- Display the header for product_name -->
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().category_id) <!-- Display the header for category_id -->
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().price) <!-- Display the header for price -->
                </th>
                <th>Actions</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.product_id) <!-- Display the product_id for each item -->
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.product_name) <!-- Display the product_name for each item -->
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.category_id) <!-- Display the category_id for each item -->
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.price) <!-- Display the price for each item -->
                    </td>
                    <td>
                        @Html.ActionLink("Create", "Create", new { id = item.product_id }) |  <!-- Provide the correct ID for Delete action -->
                        @Html.ActionLink("Edit", "Edit", new { id = item.product_id }) | <!-- Provide the correct ID for Edit action -->
                        @Html.ActionLink("Details", "Details", new { id = item.product_id }) | <!-- Provide the correct ID for Details action -->
                        @Html.ActionLink("Delete", "Delete", new { id = item.product_id }) <!-- Provide the correct ID for Delete action -->
                    </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
